<%- model_class = Petition -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<% @petitions.each do |petition| %>
 <div class="media">
   <div class="media-left col-md-4">
     <div class="thumbnail">
      <img alt="100%x200" data-src="holder.js/100%x200" src="data:image/svg+xml;base64," data-holder-rendered="true" style="height: 200px; width: 100%; display: block;">
    </div>
  <div class="progress">
  <div class="progress-bar" role="progressbar" aria-valuenow="2" aria-valuemin="0" aria-valuemax="100" style="min-width: 2em; width: 31%;">
    31%
  </div>
</div>
  </div>
  <div class="media-body">
    <h3 class="media-heading"><%=link_to petition.title, petition_path(petition) %>   
      created by <%= petition.user.email rescue "Peter G." %>
      <span><small><em><%= time_ago_in_words(petition.created_at) %> ago</em></small></span>
    
    </h3>
    <p> <%=raw petition.description %> </p>
    <hr/>
    <%- if current_user  %>
      
      <%= link_to "+ Vote Now", "#", :class => 'btn btn-info btn' %>
      
      <%- if petition.user and petition.user == current_user %>
      <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_petition_path(petition), :class => 'btn btn-default ' %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      petition_path(petition),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn  btn-danger' %>
   <% end %>
   <% end %>
  </div>
</div>   
<hr/>
<% end %>

