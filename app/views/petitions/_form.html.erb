<%= simple_form_for @petition, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :title %>
  <%= f.input :description, as: :wysihtml5 %>
  <%= f.input :active %>
  <%= f.input :level, priority: [ "Normal" ],  collection:["Critical","Urgent","Normal"], :required => true, include_blank: false , :label => "Priority" %>
  <%= f.input :user_id, as: :hidden  %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                petitions_path, :class => 'btn btn-default' %>
            <% end %>

<script>
$(document).on('page:load', function(){
  window['rangy'].initialized = false
});
</script>
